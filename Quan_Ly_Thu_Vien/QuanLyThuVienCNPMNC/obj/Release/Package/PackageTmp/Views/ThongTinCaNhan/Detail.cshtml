    <div class="container">
        <!-- Trigger the modal with a button -->
        <!-- Button trigger modal -->
        <div id="myModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Đổi ảnh đại diện</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    @using (Html.BeginForm("EditAnh", "ThongTinCaNhan", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="modal-body">
                            <!-- Form controls and fields here -->
                            <form>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <input type="file" id="ImageAva" name="ImageAva" />
                                        @Html.ValidationMessageFor(model => model.ImageAva, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                        <input type="submit" value="Lưu" class="btn btn-primary" style="background-color: #210cae; color:#fff;" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="profile mt-5">
