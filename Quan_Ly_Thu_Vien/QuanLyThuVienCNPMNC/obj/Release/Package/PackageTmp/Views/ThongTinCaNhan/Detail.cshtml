<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        list-style: none;
        font-family: 'Josefin Sans', sans-serif;
    }

    .profile .avatar-box {
        width: 35%;
        padding: 8px 0;
        border-radius: 5px;
        text-align: center;
        color: #fff;
        margin: 0 auto;
    }

        .profile .avatar-box img {
            border-radius: 5px;
            margin-bottom: 10px;
        }

        .profile .avatar-box h4 {
            margin-bottom: 10px;
        }

        .profile .avatar-box p {
            font-size: 12px;
        }

    .profile .detail {
        width: 65%;
        background: #fff;
        padding: 30px 25px;
        border-top-right-radius: 5px;
        border-bottom-right-radius: 5px;
        margin: 0 auto;
    }

        .profile .detail .info,
        .profile .detail .projects {
            margin-bottom: 25px;
        }

            .profile .detail .info h3,
            .profile .detail .projects h3 {
                margin-bottom: 15px;
                padding-bottom: 5px;
                border-bottom: 1px solid #e0e0e0;
                color: #353c4e;
                text-transform: uppercase;
                letter-spacing: 5px;
            }

        .profile .detail .info_data,
        .profile .detail .projects_data {
            display: flex;
            justify-content: space-between;
        }

            .profile .detail .info_data .data,
            .profile .detail .projects_data .data {
                width: 45%;
            }

                .profile .detail .info_data .data h4,
                .profile .detail .projects_data .data h4 {
                    color: #353c4e;
                    margin-bottom: 5px;
                }

                .profile .detail .info_data .data p,
                .profile .detail .projects_data .data p {
                    font-size: 13px;
                    margin-bottom: 10px;
                    color: #919aa3;
                }

    .profile .social_media ul {
        display: flex;
    }

        .profile .social_media ul li {
            width: 45px;
            height: 45px;
            background: linear-gradient(to right,#01a9ac,#01dbdf);
            margin-right: 10px;
            border-radius: 5px;
            text-align: center;
            line-height: 45px;
        }

            .profile .social_media ul li a {
                color: #fff;
                display: block;
                font-size: 18px;
            }

    .bg_dt_ttcn {
        margin-top: 20px !important;
        margin: auto;
        padding: 10px 50px 50px 50px;
        width: 750px;
        background: white;
        border-radius: 20px;
        box-shadow: 6px 4px 8px;
    }
</style>

