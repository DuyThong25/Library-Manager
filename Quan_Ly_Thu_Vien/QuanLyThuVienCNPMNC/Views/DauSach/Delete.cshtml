@model QuanLyThuVienCNPMNC.Models.DAUSACH

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="bg_dt">
    <p class="alert alert-danger mt-3" role="alert"><strong>Bạn có chắc muốn xóa đầu sách này?</strong></p>
    <hr />
    <dl class="dl-horizontal ">
        <dt>
            Tên đầu sách
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSach)
        </dd>

        <dt>
            Thể loại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Theloai)
        </dd>

        <dt>
            Nhà xuất bản
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NhaXuatBan.TenNXB)
        </dd>

        <dt>
            Ngày xuất bản
        </dt>

        <dd>
            @Convert.ToDateTime(Model.NgayXuatBan).ToString("dd/MM/yyyy")
        </dd>

        <dt>
            Ghi chú
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GhiChu)
        </dd>

    </dl>

    @*<input id="Delete" onclick="confirmDelete('@Model.MaDS')" type="submit" value="Xóa" class="btn btn-danger" />*@

    @using (Html.BeginForm("Delete", "DauSach", new { id = Model.MaDS }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-center">
            @*<input type="submit" value="Xóa" class="btn btn-danger" id="btn-xoa"  />*@
            <button class="btn btn-danger mr-2" id="btn-xoa" type="button" onclick="return ConfirmXoa();">Xóa</button>
            @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-outline-dark" })
        </div>
    }
</div>