@model QuanLyThuVienCNPMNC.Models.DAUSACH

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    function confirmDelete(id) {
        Swal.fire({
            title: 'Bạn có chắc muốn xóa không?',
            text: "Bạn sẽ không thể khôi phục dữ liệu này sau khi xóa!",
            icon: 'warning',
            showCancelButton: true,
            closeOnConfirm: false,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Xóa',
            cancelButtonText: 'Hủy bỏ'
        },
            function () {
                $.ajax({
                    url: "/DauSach/DeleteConfirmed/",
                    data: { "id": id },
                    type: "POST"
                })
                    .done(function (data) {
                        sweetAlert
                            ({
                                title: "Đã xóa",
                                text: "Dữ liệu của bạn đã được xóa",
                                icon: "success"
                            },
                                function () {
                                    window.location.href = "/DauSach/Index"
                                });
                    })
                    .error(function (data) {
                        swal("Oops", "Không thể kết nối tới máy chủ", "error");
                    })
            }
        )
    }
</script>

