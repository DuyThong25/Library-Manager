@model QuanLyThuVienCNPMNC.Models.DAUSACH

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .bill {
        margin-top: 20px !important;
        margin: auto;
        padding: 10px 50px 50px 50px;
        width: 500px;
        background: white;
        border-radius: 20px;
        box-shadow: 6px 4px 8px;
    }

    .bill .dl-horizontal dt {
        font-size: 20px;
    }

    .bill .dl-horizontal dd {
        font-size: 16px;
    }
</style>

<div class="bill">
    <h2 style="text-align:center;">Chi tiết đầu sách</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.MaDS)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaDS)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TenSach)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSach)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Theloai)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Theloai)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NXB)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NhaXuatBan.TenNXB)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NgayXuatBanFormatted)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayXuatBanFormatted)
        </dd>

        @*<dd>
                @Html.DisplayFor(model => model.NgayXuatBan)
            </dd>*@

        @*<span>Ngày xuất bản: @ViewBag.NgayXuatBan</span>
            <input type="text" name="NgayXuatBan" value="@ViewBag.NgayXuatBan" />*@


        <dt>
            @Html.DisplayNameFor(model => model.GhiChu)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GhiChu)
        </dd>

    </dl>

    <p style="text-align:center; padding-top: 16px;">


        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaDS }, new { @class = "btn btn-secondary" })
        @Html.ActionLink("Trở về trang danh sách", "Index", null, new { @class = "btn btn-outline-dark" })
    </p>
</div>



@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}
@if (TempData["Message"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@TempData["Message"]");
            };
    </script>
}