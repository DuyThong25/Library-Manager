<script type="text/javascript">
    function validateData() {

        if ($("#TenSach").val() == "") {
            Swal.fire({
                icon: 'warning',
                title: 'Vui lòng nhập tên sách'
            });
            return false;
        } else if ($("#Theloai").val() == "") {
            Swal.fire({
                icon: 'warning',
                title: 'Vui lòng nhập thể loại'
            });
            return false;
        } else {
            return true;
        }
    }
</script>

<h2>Chỉnh sửa</h2>

