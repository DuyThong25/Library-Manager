@model QuanLyThuVienCNPMNC.Models.BOITHUONG

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="bg_dt">
    <p class="alert alert-danger mt-3" role="alert"><strong>Bạn có muốn phiếu bồi thường này?</strong></p>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Số tiền phải trả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GiaTien)
        </dd>

        <dt>
            Tình trạng bồi thường
        </dt>

        <dd>
            @if (Model.TinhTrang == 1)
            {
                <span>Chưa đóng phạt</span>
            }
            else
            {
                <span>Đã đóng phạt</span>
            }
        </dd>

        <dt>
            Tên độc giả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HOIVIEN.TenHV)
        </dd>

        <dt>
            Mã đầu sách
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SACH.MaDS)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @*<div class="form-actions no-color text-center">
                <input type="submit" value="Delete" class="btn btn-default mr-2" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>*@

        <div class="form-actions no-color text-center">
            @*<input type="submit" value="Xóa" class="btn btn-danger" id="btn-xoa"  />*@
            <button class="btn btn-danger mr-2" id="btn-xoa" type="button" onclick="return ConfirmXoa();">Xóa</button>

            @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-outline-dark" })
        </div>
    }
</div>
