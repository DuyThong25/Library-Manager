    <script>

        function ConfirmDangXuat() {
            Swal.fire({
                title: 'Xác nhận đăng xuất !!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                cancelButtonColor: 'No, cancel!!',
                confirmButtonText: 'Yes, let me out!!',
                reverseButtons: true

            }).then((result) => {
                if (result.isConfirmed) {
                    // Người dùng đã nhấn chấp nhận
                    window.location.href = "@Url.Action("DangXuat","DangNhap")";
                }
            });

            return false; // Ngăn chặn hành vi mặc định của liên kết
        }
        function ConfirmXoa() {
            document.getElementById("btn-xoa").addEventListener("click", function () {
                Swal.fire({
                    title: 'Xác nhận xóa !!',
                    icon: 'warning',
                    text: "Thông tin này sẽ không khôi phục lại được!!",
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: "Có, xóa",
                    cancelButtonText: "Không, hủy bỏ",
                    reverseButtons: true
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Hành động xóa được thực hiện
                        document.forms[0].submit();
                        return true;
                    }
                    return false;
                });
            });
        }
