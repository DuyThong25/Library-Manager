        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NgayHetHanFormatted)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayHetHanFormatted)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TinhTrang)
        </dt>

        <dd>
            @{
                var tinhTrang = Model.NgayHetHan < DateTime.Today ? "Không sử dụng" : "Sử dụng được";
                @tinhTrang

            }

            @*@Html.DisplayFor(model => model.TinhTrang)*@
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DangMuon)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DangMuon)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TrangThai)
        </dt>

        <dd>
            @{
                if (Model.TrangThai == 1)
                {
                    @Html.Raw("Khóa");
                }
                else if (Model.TrangThai == 2)
                {
                    @Html.Raw("Bình thường");
                }
                else if (Model.TrangThai == null)
                {
                    @Html.Raw("Bình thường");
                }
            }
        </dd>



    </dl>
</div>
<p>
    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaHV }, new { @class = "btn btn-secondary" }) |
