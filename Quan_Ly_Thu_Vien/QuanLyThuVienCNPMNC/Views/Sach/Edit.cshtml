@model QuanLyThuVienCNPMNC.Models.SACH

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />

<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
<script>
    $(document).ready(function () {
        $('.list-searchable').select2({

        })
    });
</script>


@using (Html.BeginForm("Edit", "Sach", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal bg_dt w-50">
    <h2 class="text-center text-uppercase text-bold">chỉnh sửa sách</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-12">Mã sách</label>
        <div class="col-md-12">
            @*@Html.ValueFor(model=>model.MaSach)*@
            @Html.EditorFor(model => model.MaSach, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.MaSach, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-12">Tình trạng sách</label>
        <div class="col-md-12">
            @Html.DropDownListFor(model => model.TinhTrang, ViewBag.TinhTrang as SelectList, new { @class = "form-control list-searchable" })
            @*@Html.EditorFor(model => model.TinhTrang, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-12">Mã đầu sách</label>
        <div class="col-md-12">
            @Html.DropDownListFor(model => model.MaDS, ViewBag.ListMaDauSach as SelectList, new { @class = "form-control list-searchable" })

            @*@Html.EditorFor(model => model.MaDS, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.ValidationMessageFor(model => model.MaDS, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-12">Mô tả</label>
        <div class="col-md-12">
            <textarea name="MoTa" id="MoTa" style="width:100%" rows="5" placeholder="Nhập mô tả..." required>@Model.MoTa</textarea>

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-12 text-center">
            <input type="submit" value="Lưu" class="btn mr-2" style="background-color: #210cae; color:#fff;" />
            @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-outline-secondary" })

        </div>
    </div>
</div>
}

<script type="text/javascript">
    $(function () {
        $('.list-searchable').chosen();
    })
</script>

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}
@if (TempData["Message"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@TempData["Message"]");
            };
    </script>
}