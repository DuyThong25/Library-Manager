@model QuanLyThuVienCNPMNC.Models.BAOCAO

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="bg_dt">
    <p class="alert alert-danger mt-3" role="alert"><strong>Bạn có muốn xóa báo cáo này?</strong></p>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tiêu đề
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tieude)
        </dd>

        <dt>
            Nội dung
        </dt>

        <dd>
            @Html.Raw(Model.Description)
        </dd>
        <dt>
            Người lập báo cáo
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NHANVIEN.TenNV)
        </dd>
        <dt>
            Ngày lập báo cáo
        </dt>

        <dd>
            @* @Html.DisplayFor(model => model.NgayLapBaoCao)*@
            @Convert.ToDateTime(Model.NgayLapBaoCao).ToString("dd/MM/yyyy")
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color mr-2 text-center">
            <input type="submit" value="Xóa" class="btn btn-danger mr-2" />
            @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-outline-dark" })
        </div>
    }
</div>


@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}
@if (TempData["Message"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@TempData["Message"]");
            };
    </script>
}