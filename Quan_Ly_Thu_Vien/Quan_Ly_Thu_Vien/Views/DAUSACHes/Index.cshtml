@model IEnumerable<Quan_Ly_Thu_Vien.Models.DAUSACH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    <link rel="stylesheet" href="~/Content/MyLayout/css/style.css">

    <!-- nhúng icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">


    <link href=" ~/Content/MyLayout/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/Content/MyLayout/css/sb-admin-2.min.css" rel="stylesheet">

    <!-- Custom styles for this page -->
    <link href="~/Content/MyLayout/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

}


<main>
    <div class="page-header ml-5">
        <div>
            <h1>Danh mục đầu sách</h1>
            <small>Trang chủ / Danh mục đầu sách</small>
        </div>
    </div>

    <div class="page-content ml-5">
        <a class="link-button" href="Create">Tạo đầu sách</a>
        <a class="link-button" href="/SACHes/Create">Tạo mã sách</a>
        <a class="link-button active" href="">Thông tin đầu sách</a>
    </div>

    <div class="container-fluid ml-4 mt-2">

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Mã đầu sách</th>
                                <th>Tên sách</th>
                                <th>Tác giả</th>
                                <th>Nhà xuất bản</th>
                                <th>Thể loại</th>
                            </tr>
                        </thead>
                        <tbody id="table-list">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaDS)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenSach)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenTG)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NhaXuatBan.TenNXB)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Theloai)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</main>
