@section scripts{
    <script>
        $(function () {
            $('#AlertBox').removeClass('hide');
            $('#AlertBox').delay(2000).slideUp(500);
        });

    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
    <!-- (Optional) Latest compiled and minified JavaScript translation files -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/i18n/defaults-*.min.js"></script>
}



<main>

    <div class="page-header ml-5">
        <div>
            <h1>Tạo mã sách</h1>
            <small>Trang chủ / Tạo mã sách</small>
        </div>
    </div>

    <!-- Thông tin mượn sách -->
    <div class="page-content ml-5">
        <a class="link-button" href="/DAUSACHes/Create">@*@Html.ActionLink("Tạo mã đầu sách", "~Views/SACHes/Create", new { @class = "text-success" })*@Tạo đầu sách</a>
        <a class="link-button active" href="Create">Tạo mã sách</a>
        <a class="link-button" href="/DAUSACHes/Index">Thông tin đầu sách</a>
    </div>

    @if (TempData["AlertMessage"] != null)
    {
        <div id="AlertBox" class="alert @TempData["AlertType"] hide ml-5 mt-3 page-content" role="alert">
            @TempData["AlertMessage"]
        </div>
    }

    <div class="page-content borrow-book-infomation">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <fieldset style="border:1px solid #000; padding:1px 12px 16px 8px">
                <legend class="h2">Thông tin sách</legend>


                <div class="borrow-book-infomation-left">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="borrow-book-item" style="width:450px">
                        <div class="col-md-3">
                            <p class="h4 mt-2 mb-2" style="width:500px">Mã Sách</p>
                        </div>
                        <div>
                            @Html.EditorFor(model => model.MaSach, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="borrow-book-item" style="width:450px">
                        <div class="col-md-3">
                            <p class="h4 mt-2 mb-2" style="width:500px">Tình Trạng</p>
                        </div>
                        <div>
                            @Html.EditorFor(model => model.TinhTrang, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="borrow-book-item" style="width:360px">
                        <div class="col-md-3" style="padding-bottom:10px">
                            <p class="h4 mt-2 mb-2" style="width:500px">Đầu sách</p>
                        </div>
                        <div>
                            @Html.DropDownList("MaDS", null, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </fieldset>

            <div class="page-content" style="margin-left: 135px">
                <button class="btn btn-update-book btn-success" style="height: 40px; margin: 0px auto; background-color: #22BAA0 " id="open-modal" alert="">Đồng ý</button>
            </div>

            <!-- The Modal -->
            <!--<div class="modal" id="myModal">
                <div class="modal-dialog">
                    <div class="modal-content">-->
            <!-- Modal Header -->
            <!--<div class="modal-header">
                <h4 class="modal-title text-dark">Thông báo</h4>
                <hr />
            </div>-->
            <!-- Modal body -->
            <!--<div class="modal-body text-dark">Tạo Không Thành Công!</div>-->
            <!-- Modal footer -->
            <!--<div class="modal-footer">
                            <button id="update-book-list" class="btn btn-success" style="width: 100px; margin: 24px auto; background-color: #22BAA0">Đóng</button>
                        </div>
                    </div>
                </div>
            </div>-->
        }
    </div>
</main>
