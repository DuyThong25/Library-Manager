
@{
    ViewBag.Title = "_LayoutAdmin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <title>Quản lý thư viện</title>
    <link rel="stylesheet" href="./style.css">

    <!-- nhúng icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">

    <link href=" ~/Content/MyLayout/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/Content/MyLayout/css/sb-admin-2.min.css" rel="stylesheet">

    <!-- Custom styles for this page -->
    <link href="~/Content/MyLayout/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">


</head>
<body>
    <input type="checkbox" id="menu-toggle">
    <div class="sidebar" style="width:200px">
        <div class="side-header">
            <h3>QLTV<span></span></h3>
        </div>

        <div class="side-content">
            <div class="profile">
                <div class=" bg-img" @*style="background-image: url(Content/)"*@>
                    <img src="~/Content/MyLayout/img" class="profile-img bg-img">
                </div>
                <h4>Quản lý</h4>
                <small>Cán bộ QLTV</small>
            </div>

            <!-- Menu -->
            <div class="side-menu" >
                <ul>
                    <li>
                        <a href="~/Home/Index">
                            <span class="las la-home"></span>
                            <small>Trang chủ</small>
                        </a>
                    </li>
                    <li>
                        <a href="~/SACHes/Index">
                            <span class="las la-book"></span>
                            <small>Danh mục sách</small>
                        </a>
                    </li>
                    <li>
                        <a href="~/PHIEUMUONSACHes/Index">
                            <span><i class="las la-truck"></i></span>
                            <small>Mượn trả sách</small>
                        </a>
                    </li>
                    <li>
                        <a href="~/SACHes/Create">
                            <span><i class="las la-plus-square"></i></span>
                            <small>Nhập sách</small>
                        </a>
                    </li>
                    <li>
                        <a href="~/HOIVIENs/Index">
                            <span class="las la-user"></span>
                            <small>Quản lý hội viên</small>
                        </a>
                    </li>
                    <li>
                        <a href="~/PHONGHOPs/Index">
                            <span><i class="las la-hospital-alt"></i></span>
                            <small>Quản lý phòng họp</small>
                        </a>
                    </li>
                    <li>
                        <a href="~/DOANHTHUs/Create">
                            <span class="las la-tasks"></span>
                            <small>Thống kê/báo cáo</small>
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </div>

    <div class="main-content">

        <!-- Sẽ phát triển sau này -->
        <header>
            <div class="header-content">
                <label for="menu-toggle">
                    <span class="las la-bars"></span>
                </label>


                <div class="header-menu">

                    <!-- search -->
                    <label for="">
                        <span class="las la-search"></span>
                    </label>

                    <!-- thông báo -->
                    <div class="notify-icon">
                        <span class="las la-bell"></span>
                        <span class="notify">3</span>
                    </div>

                    <!-- user -->
                    <div class="user">
                        <div class="bg-img" style="background-image: url(~/Content/MyLayout/img/thanh.jpg)"></div>

                        <span class="las la-power-off"></span>
                        <span>Đăng xuất</span>
                    </div>
                </div>
            </div>
        </header>
        <main>
            @RenderBody()
        </main>

    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <script src="~/Content/MyLayout/js/app.js"></script>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/MyLayout/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/MyLayout/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Content/MyLayout/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Content/MyLayout/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/Content/MyLayout/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/MyLayout/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Content/MyLayout/js/demo/datatables-demo.js"></script>

</body>
</html>

